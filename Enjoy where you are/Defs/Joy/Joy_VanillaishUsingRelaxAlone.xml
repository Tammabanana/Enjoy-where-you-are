<!-- Compose poem (Works!) -->

  <JoyGiverDef>
    <defName>ComposePoem</defName>
    <giverClass>JoyGiver_InPrivateRoom</giverClass>
    <baseChance>2</baseChance>
    <pctPawnsEverDo>0.2</pctPawnsEverDo>
    <jobDef>ComposePoem</jobDef>
    <joyKind>Meditative</joyKind>
  </JoyGiverDef>
  
  <JobDef>
    <defName>ComposePoem</defName>
    <driverClass>JobDriver_RelaxAlone</driverClass>
    <reportString>composing an epic poem.</reportString>
    <joyDuration>4000</joyDuration>
	<joySkill>Artistic</joySkill>
    <joyXpPerTick>0.004</joyXpPerTick>	
    <joyGainRate>1</joyGainRate>
    <joyKind>Meditative</joyKind>
  </JobDef>
  
  
